programa
{
	//Ler um número e caso seja maior que 20, informar a metade desse número
	
	funcao inicio()
	{
		inteiro n

		escreva("Digite um número: ")
			leia(n)

		se (n > 20){
			escreva(n," > 20 !")
			escreva("\n",n," / 2 = ",n / 2)
		}
	}
}
